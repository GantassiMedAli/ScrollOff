# MySQL database settings
DB_HOST=your_host
DB_USER=your_user
DB_PASSWORD=your_password
DB_NAME=your_database

# JWT secret used to sign/verify admin tokens
# IMPORTANT: set this to a random strong value for local development and production.
# If not set the server will use a development fallback and warn at startup.
JWT_SECRET=your_jwt_secret_here

# Server port (optional)
PORT=3000
